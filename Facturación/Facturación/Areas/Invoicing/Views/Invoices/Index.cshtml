@model IEnumerable<Facturación.Entities.Invoices.Invoice>

@{
    ViewBag.Title = "Facturas";
}

<h1 class="h3 mb-2 text-gray-800">Consultar facturas</h1>
<p class="mb-4">Aquí puedes ver las facturas que has creado.</p>

<div class="card border-primary shadow mb-4">
    <div class="card-header py-3">
        <div class="h4 font-weight-bold text-primary">
            Facturas
            <a href="~/Invoicing/Invoices/Create" style="width:100px" class="float-right text-white btn btn-primary">Crear</a>
        </div>

    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Número</th>
                        <th>Cliente</th>
                        <th>Vendedor</th>
                        <th>Fecha</th>
                        <th style="width:110px"></th>
                        <th style="width:110px"></th>
                        <th style="width:110px"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.OrderNumber</td>
                            <td>@item.Customer</td>
                            <td>@item.Seller</td>
                            <td>@item.Date</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
