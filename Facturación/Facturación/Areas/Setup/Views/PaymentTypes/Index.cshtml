@model IEnumerable<Facturación.Entities.PaymentTypes.PaymentType>

@{
    ViewBag.Title = "Formas de pago";
}

<h1 class="h3 mb-2 text-gray-800">Consultar formas de pago</h1>
<p class="mb-4">Aquí puedes ver las formas de pago.</p>

<div class="card border-primary shadow mb-4">
    <div class="card-header py-3">
        <div class="h4 font-weight-bold text-primary">
            Formas de pago
            <a href="/Setup/PaymentTypes/Create" style="width:100px" class="float-right text-white btn btn-primary">Crear</a>
        </div>

    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Código</th>
                        <th>Nombre</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="@item.Id">
                            <td>@Html.Raw(item.Code)</td>
                            <td>@Html.Raw(item.Name)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

