@model Facturación.Entities.Products.Product

@{
    ViewBag.Title = "Editar producto";
}

<h1 class="h3 mb-2 text-gray-800">Editar producto</h1>
<p class="mb-4">Cambia los datos de los productos.</p>

<div class="card border-primary shadow mb-4">
    <div class="card-header py-3">
        <div class="h4 font-weight-bold text-primary">
            Productos
            <a href="/Setup/Products/" style="width:100px" class="float-right mx-2 text-white btn btn-primary">Volver</a>
        </div>
    </div>
    @using (Html.BeginForm("Edit", "Products"))
    {
        @Html.Hidden("Id", Model.Id)
        <div class="card-body">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Código</label>
                        <input class="form-control" name="Code" id="Code" value="@Model.Code" required />
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Nombre</label>
                        <input class="form-control" name="Name" id="Name" value="@Model.Name" required />
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Categoría</label>
                        @Html.DropDownList("Category",null, "Selecciona un categoría", new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Precio</label>
                        <input type="number" step="any" class="form-control" name="Price" id="Price" value="@Model.Price" />
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Stock</label>
                        <input type="number" class="form-control" name="Stock" id="Stock" value="@Model.Stock" />
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Impuesto</label>
                        @Html.DropDownList("Tax", null, "Selecciona un impuesto", new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <button style="width:100px" type="submit" class="float-right text-white btn btn-info">Guardar</button>
        </div>
    }
</div>
