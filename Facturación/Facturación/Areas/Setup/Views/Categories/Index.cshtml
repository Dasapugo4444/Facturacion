@model IEnumerable<Facturación.Entities.ProductCategories.Category>

@{
    ViewBag.Title = "Categorías de producto";
}

<h1 class="h3 mb-2 text-gray-800">Consultar categorías</h1>
<p class="mb-4">Aquí puedes ver las categorías que serán asignadas a tus productos.</p>

<div class="card border-primary shadow mb-4">
    <div class="card-header py-3">
        <div class="h4 font-weight-bold text-primary">
            Categorías
            <a href="/Setup/Categories/Create" style="width:100px" class="float-right text-white btn btn-primary">Crear</a>
        </div>

    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Código</th>
                        <th>Nombre</th>
                        <th style="width:110px"></th>
                        <th style="width:110px"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                    <tr id="@item.Id">
                        <td>@item.Code</td>
                        <td>@item.Name</td>
                        <td style="width:110px">
                            <a href="~/Setup/Categories/Edit/@item.Id" class="btn btn-primary btn-icon-split btn-sm">
                                <span class="icon text-white-50">
                                    <i class="mt-1 fas fa-pencil-alt"></i>
                                </span>
                                <span class="text text-white">Editar</span>
                            </a>
                        </td>
                        <td style="width:110px">
                            <a href="~/Setup/Categories/Delete/@item.Id" class="btn btn-danger btn-icon-split btn-sm">
                                <span class="icon text-white-50">
                                    <i class="mt-1 fas fa-eraser"></i>
                                </span>
                                <span class="text text-white">Eliminar</span>
                            </a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>