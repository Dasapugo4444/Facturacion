@model Facturación.Entities.PersonTypes.PersonType

@{
    ViewBag.Title = "Crear tipo de persona";
}

<h1 class="h3 mb-2 text-gray-800">Crear tipo de persona</h1>
<p class="mb-4">Crea los tipo de persona que serán asignados a las personas que crees.</p>

<div class="card border-primary shadow mb-4">
    <div class="card-header py-3">
        <div class="h4 font-weight-bold text-primary">
            Tipos de personas
            <a href="/Setup/PersonTypes/" style="width:100px" class="float-right mx-2 text-white btn btn-primary">Volver</a>
        </div>
    </div>
    @using (Html.BeginForm("Create", "PersonTypes"))
    {
        <div class="card-body">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Código</label>
                        <input class="form-control" name="Code" id="Code" />
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Nombre</label>
                        <input class="form-control" name="Name" id="Name" />
                    </div>
                </div>
            </div>
            <button style="width:100px" type="submit" class="float-right text-white btn btn-info">Guardar</button>
        </div>
    }
</div>
