@model IEnumerable<Facturación.Entities.Persons.Person>

@{
    ViewBag.Title = "Personas";
}

<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Consultar personas</h1>
<p class="mb-4">Aquí puedes ver los clientes y vendedores.</p>

<!-- DataTales Example -->
<div class="card border-primary shadow mb-4">
    <div class="card-header py-3">
        <div class="h4 font-weight-bold text-primary">
            Personas
            <a href="/Setup/Persons/Create" style="width:100px" class="float-right text-white btn btn-primary">Crear</a>
        </div>

    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Tipo de persona</th>
                        <th>Tipo de identificación</th>
                        <th>Número de identificación</th>
                        <th>Teléfono</th>
                        <th style="width:110px"></th>
                        <th style="width:110px"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                        <tr>
                            <td>@item.FirstName</td>
                            <td>@item.SurName</td>
                            <td>@item.PersonType</td>
                            <td>@item.DocumentType</td>
                            <td>@item.IdentificationNumber</td>
                            <td>@item.Phone</td>
                            <td style="width:110px">
                                <a href="~/Setup/Persons/Edit/@item.Id" class="btn btn-primary btn-icon-split btn-sm">
                                    <span class="icon text-white-50">
                                        <i class="mt-1 fas fa-pencil-alt"></i>
                                    </span>
                                    <span class="text text-white">Editar</span>
                                </a>
                            </td>
                            <td style="width:110px">
                                <a href="~/Setup/Persons/Delete/@item.Id" class="btn btn-danger btn-icon-split btn-sm">
                                    <span class="icon text-white-50">
                                        <i class="mt-1 fas fa-eraser"></i>
                                    </span>
                                    <span class="text text-white">Eliminar</span>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

